<% include ../partials/header %>
<link rel="stylesheet" href="../../dist/css/lognreg.css">
<div class="hero-body">
    <% if(errors){ %>
        <div class="notification is-danger container is-fluid" role="alert"> 
            <%= errors.msg %>
        </div>
    <% } %>
    <div class="container content">
        <div class="columns" style="justify-content: center">
            <div class="column is-three-fifths frame" >
                <h1 class="title">Sign Up</h1>
                <div class="social-media">
                    <a href="/auth/facebook" class="btn-face">
                        <i class="fab fa-facebook"></i>
                    </a>
    
                    <a href="/auth/google" class="btn-google">
                        <i class="fab fa-google"></i>
                    </a>
                </div>
                <form action="/register" method="POST" class="logSigForm">
                    <input class="input smmargin" name="email" placeholder="Email" autofocus type="email" required />
                    <input class="input smmargin" name="username" placeholder="Username" type="text" required />
                    <input class="input smmargin" name="password" placeholder="Password" type="password" required />
                    <div class="control" style="margin-top: 1.5vh;">
                        <div class="g-recaptcha" data-sitekey="6LdvYJcUAAAAAEIBbmyIYek6wtGPntd950QhErrh"></div>
                        <button class="button is-primary">Register</button>
                    </div>
                </form>
                <p style="padding-top: 1vh;">Already a member? <a href="/login">Sign in here</a></p>
            </div>
        </div>
    </div>
</div>
<% include ../partials/footer %>
<script src="https://www.google.com/recaptcha/api.js" async defer></script>
<% include ../partials/header %>

<link rel="stylesheet" href="../../dist/css/lognreg.css">
<div class="hero-body">
    <div class="container content">
                
        <div class="columns" style="justify-content: center">
            <div class="column is-three-fifths lrform">
                <h1 style="color: orange;">Check your phone</h1>
                <form action="/login/verify" method="POST" style="padding-top: 3vh;">
                    <div style="display: flex; justify-content: space-between; padding-top: 1rem;">
                        <input name="pin" type="number" placeholder="1234" required />
                        <input name="requestId" type="hidden" value="<%= requestId %>" required>
                        <input name="username" type="hidden" value="<%= username %>" required>
                        <input name="password" type="hidden" value="<%= password %>" required>
                        <button class="button is-primary">Verify PIN</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<% include ../partials/footer %>
                                                    <div class="steps-action">
                                                        <a href="#" data-nav="next" class="button is-light">Next</a>
                                                    </div>
                                                </div>
                                    </section>
                                    <footer class="modal-card-foot">
                                        <button class="button is-danger cancelCoinswitch">Cancel</button>
                                    </footer>
                                    </div>
                                    <script>
                                    bulmaSteps.attach();
                                    </script>
                            </div>
                        </div>
                    </div>
                </div>
                

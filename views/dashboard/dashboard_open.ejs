<% include ../partials/header %>
<link rel="stylesheet" type="text/css" media="screen" href="/dist/css/dashboard.css" />
<link rel="stylesheet" type="text/css" href="../../dist/css/main.css" />
<div class="columns">
    <% include ../partials/sidebar %>
    <div class="column dashboard-right" >
        <div class="columns">
            <div class="column"></div>
            <div class="column is-four-fifths">
                <% if (products.docs.length === 0) { %>
                    <p class="title">You have not created any products yet.</p>
                    <p class="title">Click <a href="/dashboard/new">here</a> to create a deal.</p>
                <% } else { %>
                    <div style="overflow-x: hidden;">
                        <div style="display: flex; justify-content: center; margin-bottom: 2vh;">
                            <p class="subtitle" style="padding-top: 0.3vh;">Pages:</p> 
                            <% include ../partials/paginateOpenProducts %>
                        </div>
                        <% products.docs.forEach((product) => { %>
                            <div class="columns">
                                <div class="column is-one-quarter">
                                        <img src="<%= product.images[0].url %>" class="open-img">
                                </div>
                                <div class="column prod_info is-half">
                                    <p class="title is-5"><%= product.name %></p>
                                    <p class="subtitle is-6"><sub>Shipping: TBD</sub></p>
                                    <div style="display: flex;">
                                        <a href="/products/<%= product._id %>/view"><button class="button view-btn">View</button></a>
                                        <a class="button is-warning" href="/dashboard/<%= product._id %>/edit" style="margin-left: 1vw;">Edit</a>
                                        <form action="/dashboard/<%= product._id %>?_method=DELETE" onsubmit="return confirm('Really delete that product?');" method="POST" style="margin-left: 1vw;">
                                            <button class="button is-danger">Delete</button>
                                        </form>
                                    </div>   
                                </div>
                                <div class="column prod_info">
                                <% if (product.accepted[0]) { %>
                                    <div class="prices">
                                        <p class="price_text"> <%= product.price[0] %></p>
                                        <span class="price_img"><img src="../../dist/img/bitcoin.png" alt="Bitcoin"></span>
                                    </div>
                                <% } 
                                    if (product.accepted[1]) {
                                %>
                                    <div class="prices">
                                        <p class="price_text"> <%= product.price[1] %></p>
                                        <span class="price_img"><img src="../../dist/img/bitcoincash.png" alt="BitcoinCash"></span>
                                    </div>
                                <% } 
                                    if (product.accepted[2]) {
                                %>
                                    <div class="prices">
                                        <p class="price_text"> <%= product.price[2] %></p>
                                        <span class="price_img"><img src="../../dist/img/ethereum.png" alt="Ethereum"></span>
                                    </div>
                                <% } 
                                    if (product.accepted[3]) {
                                %>
                                    <div class="prices">
                                        <p class="price_text"> <%= product.price[3] %></p>
                                        <span class="price_img"><img src="../../dist/img/litecoin.png" alt="Litecoin"></span>
                                    </div>
                                <% } 
                                    if (product.accepted[4]) {
                                %>
                                    <div class="prices">
                                        <p class="price_text"> <%= product.price[4] %></p>
                                        <span class="price_img"><img src="../../dist/img/dash.png" alt="DASH"></span> 
                                    </div>
                                <% } %>
                            </div>
                        </div>
                        <hr>                    
                        <% }); %>         
                    </div>        
                    <div style="display: flex; justify-content: center; margin-bottom: 2vh;">
                        <p class="subtitle" style="padding-top: 0.3vh;">Pages:</p> 
                        <% include ../partials/paginateOpenProducts %>
                    </div>
                <% } %>
            </div>
            <div class="column"></div>
        </div>
        
</div> 
</div>


<% include ../partials/footer %>
<script src='../../dist/js/dashboard_products.js'></script>
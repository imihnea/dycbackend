                                        <div class="column">
                                            <p class="delivery">Same country delivery</p>
                                        </div>
                                    </div>
                                    <input id="country" type="checkbox" name="product[country]" class="curr_checkbox" value="true" <% if (product.deliveryOptions.country.valid) { %> checked <% } %>>

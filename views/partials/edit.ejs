                                        <div class="column">
                                            <p class="delivery">Same state delivery</p>
                                        </div>
                                    </div>
                                    <input id="state" type="checkbox" name="product[state]" class="curr_checkbox" value="true" <% if (product.deliveryOptions.state.valid) { %> checked <% } %>>
                                </label>
                            </div>
                        </div>
                        <div class="column">
                            <div style="display: flex; justify-content: space-evenly">
                                <label class="img-check ">
                                    <div id="countryDiv" class="columns options <% if (product.deliveryOptions.country.valid) { %> optionsChecked <% } else { %> optionsUnchecked <% } %>">

<link rel="stylesheet" href="../../dist/css/products.css">
<div class="column dashboard-right">
    <div class="columns">
        <div class="column"></div>
        <div class="column is-three-fifths">
            <h1 class="title">Edit <%= product.name %></h1>
            <form action="/dashboard/<%= product._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                <h4 class="new-text" style="margin-bottom: 3vh;">General Information</h4>
                <div class="container is-fluid">
                    <% if(errors){ %>
                        <div class="notification is-danger" role="alert"> 
                        <% errors.forEach(function( err){ %>
                            <%= err.msg %><br>
                        <% }) %>
                        </div>
                    <% } %>
                </div>
                <input class="input smmargin" name="product[name]" value="<%= product.name %>" type="text" required />
                <div class="select cont-select">
                    <select name="product[category]" style="width: 100%;">
                            <option disabled selected>Categories</option>
                            <option disabled>Collectibles & Art</option>
                            <option <% if ( product.category == "collectibles") { %> selected <% } else { %> <% } %>  value="collectibles">Collectibles</option>
                            <option <% if ( product.category == "antiques") { %> selected <% } else { %> <% } %>  value="antiques">Antiques</option>
                            <option <% if ( product.category == "sportsmemorabilia") { %> selected <% } else { %> <% } %>  value="sportsmemorabilia">Sports Memorabilia</option>
                            <option <% if ( product.category == "art") { %> selected <% } else { %> <% } %>  value="art">Art</option>
                            <option disabled>Home & Garden</option>
                            <option <% if ( product.category == "yardgardenoutdoor") { %> selected <% } else { %> <% } %>  value="yardgardenoutdoor">Yard, Garden & Outdoor</option>
                            <option <% if ( product.category == "crafts") { %> selected <% } else { %> <% } %>  value="crafts">Crafts</option>
                            <option <% if ( product.category == "homeimprovement") { %> selected <% } else { %> <% } %>  value="homeimprovement">Home Improvement</option>
                            <option <% if ( product.category == "petsupplies") { %> selected <% } else { %> <% } %>  value="petsupplies">Pet Supplies</option>
                            <option disabled>Sporting goods</option>
                            <option <% if ( product.category == "outdoorsports") { %> selected <% } else { %> <% } %> value="outdoorsports">Outdoor Sports</option>
                            <option <% if ( product.category == "teamsports") { %> selected <% } else { %> <% } %>  value="teamsports">Team Sports</option>
                            <option <% if ( product.category == "exercisefitness") { %> selected <% } else { %> <% } %>  value="exercisefitness">Exercise & Fitness</option>
                            <option <% if ( product.category == "golf") { %> selected <% } else { %> <% } %>  value="golf">Golf</option>
                            <option disabled>Electronics</option>
                            <option <% if ( product.category == "computerstablets") { %> selected <% } else { %> <% } %>  value="computerstablets">Computers & Tablets</option>
                            <option <% if ( product.category == "camerasphoto") { %> selected <% } else { %> <% } %>  value="camerasphoto">Cameras & Photo</option>
                            <option <% if ( product.category == "tvaudiosurveillance") { %> selected <% } else { %> <% } %>  value="tvaudiosurveillance">TV, Audio & Surveillance</option>
                            <option <% if ( product.category == "phonesandaccessories") { %> selected <% } else { %> <% } %>  value="phonesandaccessories">Cell Phones & Accessories</option>
                            <option disabled>Auto Parts & Accessories</option>
                            <option <% if ( product.category == "gpssecurity") { %> selected <% } else { %> <% } %>  value="gpssecurity">GPS & Security Devices</option>
                            <option <% if ( product.category == "radarlaser") { %> selected <% } else { %> <% } %>  value="radarlaser">Radar & Laser Detectors</option>
                            <option <% if ( product.category == "caredetailing") { %> selected <% } else { %> <% } %>  value="caredetailing">Care & Detailing</option>
                            <option <% if ( product.category == "scooter") { %> selected <% } else { %> <% } %>  value="scooter">Scooter Parts & Accessories</option>
                            <option disabled>Toys & Hobbies</option>
                            <option <% if ( product.category == "radiocontrol") { %> selected <% } else { %> <% } %>  value="radiocontrol">Radio Control</option>
                            <option <% if ( product.category == "kidstoys") { %> selected <% } else { %> <% } %>  value="kidstoys">Kids Toys</option>
                            <option <% if ( product.category == "actionfigures") { %> selected <% } else { %> <% } %>  value="actionfigures">Action Figures</option>
                            <option <% if ( product.category == "dollsbears") { %> selected <% } else { %> <% } %>  value="dollsbears">Dolls & Bears</option>
                            <option disabled>Fashion</option>
                            <option <% if ( product.category == "women") { %> selected <% } else { %> <% } %>  value="women">Women</option>
                            <option <% if ( product.category == "men") { %> selected <% } else { %> <% } %>  value="men">Men</option>
                            <option <% if ( product.category == "jewerlywatches") { %> selected <% } else { %> <% } %>  value="jewerlywatches">Jewerly & Watches</option>
                            <option <% if ( product.category == "shoes") { %> selected <% } else { %> <% } %>  value="shoes">Shoes</option>
                            <option disabled>Musical instruments & gear</option>
                            <option <% if ( product.category == "guitar") { %> selected <% } else { %> <% } %>  value="guitar">Guitar</option>
                            <option <% if ( product.category == "proaudio") { %> selected <% } else { %> <% } %>  value="proaudio">Pro Audio Equipment</option>
                            <option <% if ( product.category == "string") { %> selected <% } else { %> <% } %>  value="string">String</option>
                            <option <% if ( product.category == "stagelightningeffects") { %> selected <% } else { %> <% } %>  value="stagelightningeffects">Stage Lightning & Effects</option>
                            <option disabled>Other categories</option>
                            <option <% if ( product.category == "videogamesconsoles") { %> selected <% } else { %> <% } %>  value="videogamesconsoles">Video Games & Consoles</option>
                            <option <% if ( product.category == "healthbeauty") { %> selected <% } else { %> <% } %>  value="healthbeauty">Health & Beauty</option>
                            <option <% if ( product.category == "baby") { %> selected <% } else { %> <% } %>  value="baby">Baby</option>
                            <option <% if ( product.category == "businessindustrial") { %> selected <% } else { %> <% } %>  value="businessindustrial">Business & Industrial</option>
                    </select>
                </div>
                <textarea name="product[description]" class="textarea" value="<%= product.description %>"><%= product.description %></textarea>
                <hr>
                <h4 class="new-text" style="margin-bottom: 3vh;">Images</h4>
                <div class="file-upload">
                    <div>
                        <label for="upload[0]" name="u" class="<% if (product.images[0]) { %> file-upload__label-green <% } else { %> file-upload__label <% } %>">
                            <span style="font-size: 5rem;">
                                <i class="far fa-plus-square square <% if (product.images[0]) { %> hide <% } %>"></i>
                                <i class="far fa-check-square <% if (!product.images[0]) { %> hide <% } %>"></i>
                            </span>
                        </label>
                        <input id="upload[0]" class="file-upload__input" accept="image/*" type="file" name="images" 
                            <% if (product.images[0]) { %> value="<%= product.images[0].url %>" <% } %>>
                        <label class="file-delete__label <% if (!product.images[0]) { %> hide <% } %>">
                            <span>
                                <i class="far fa-trash-alt"></i>
                            </span>
                        </label>
                    </div>
                    <div>
                        <label for="upload[1]" name="u" class="<% if (product.images[1]) { %> file-upload__label-green <% } else { %> file-upload__label <% } %>">
                            <span style="font-size: 5rem;">
                                <i class="far fa-plus-square square <% if (product.images[1]) { %> hide <% } %>"></i>
                                <i class="far fa-check-square <% if (!product.images[1]) { %> hide <% } %>"></i>
                            </span>
                        </label>
                        <input id="upload[1]" class="file-upload__input" accept="image/*" type="file" name="images" 
                            <% if (product.images[1]) { %> value="<%= product.images[1].url %>" <% } %>>
                        <label class="file-delete__label <% if (!product.images[1]) { %> hide <% } %>">
                            <span>
                                <i class="far fa-trash-alt"></i>
                            </span>
                        </label>
                    </div>
                    <div>
                        <label for="upload[2]" name="u" class="<% if (product.images[2]) { %> file-upload__label-green <% } else { %> file-upload__label <% } %>">
                            <span style="font-size: 5rem;">
                                <i class="far fa-plus-square square <% if (product.images[2]) { %> hide <% } %>"></i>
                                <i class="far fa-check-square <% if (!product.images[2]) { %> hide <% } %>"></i>
                            </span>
                        </label>
                        <input id="upload[2]" class="file-upload__input" accept="image/*" type="file" name="images" 
                            <% if (product.images[2]) { %> value="<%= product.images[2].url %>" <% } %>>
                        <label class="file-delete__label <% if (!product.images[2]) { %> hide <% } %>">
                            <span>
                                <i class="far fa-trash-alt"></i>
                            </span>
                        </label>
                    </div>
                    <div>
                        <label for="upload[3]" name="u" class="<% if (product.images[3]) { %> file-upload__label-green <% } else { %> file-upload__label <% } %>">
                            <span style="font-size: 5rem;">
                                <i class="far fa-plus-square square <% if (product.images[3]) { %> hide <% } %>"></i>
                                <i class="far fa-check-square <% if (!product.images[3]) { %> hide <% } %>"></i>
                            </span>
                        </label>
                        <input id="upload[3]" class="file-upload__input" accept="image/*" type="file" name="images" 
                            <% if (product.images[3]) { %> value="<%= product.images[3].url %>" <% } %>>
                        <label class="file-delete__label <% if (!product.images[3]) { %> hide <% } %>">
                            <span>
                                <i class="far fa-trash-alt"></i>
                            </span>
                        </label>
                    </div>
                    <div>
                        <label for="upload[4]" name="u" class="<% if (product.images[4]) { %> file-upload__label-green <% } else { %> file-upload__label <% } %>">
                            <span style="font-size: 5rem;">
                                <i class="far fa-plus-square square <% if (product.images[4]) { %> hide <% } %>"></i>
                                <i class="far fa-check-square <% if (!product.images[4]) { %> hide <% } %>"></i>
                            </span>
                        </label>
                        <input id="upload[4]" class="file-upload__input" accept="image/*" type="file" name="images" 
                            <% if (product.images[4]) { %> value="<%= product.images[4].url %>" <% } %>>
                        <label class="file-delete__label <% if (!product.images[4]) { %> hide <% } %>">
                            <span>
                                <i class="far fa-trash-alt"></i>
                            </span>
                        </label>
                    </div>
                </div>                                     
                <hr>
                <h4 class="new-text" style="margin-bottom: 3vh;">Accepted currencies</h4>
                <label class="checkbox">
                    <% if (product.accepted[0]){ %>
                        <label class="img-check ">
                            <img src="../../dist/img/bitcoin.png" id="btc-check-img" alt="Bitcoin" class="new_cccy" id="btcimg">
                            <input id="btc-check" type="checkbox" name="product[acc_btc]" value="true" class="curr_checkbox" checked>
                        </label>
                    <% } else { %>
                        <label class="img-check ">
                            <img src="../../dist/img/bitcoin.png" id="btc-check-img" alt="Bitcoin" class="new_cccy gray" id="btcimg">
                            <input id="btc-check" type="checkbox" name="product[acc_btc]" value="true" class="curr_checkbox" >
                        </label>
                    <% } %>
                </label>
                <label class="checkbox">
                    <% if (product.accepted[1]){ %>
                        <label class="img-check ">
                            <img src="../../dist/img/bitcoincash.png" id="bch-check-img"  alt="BitcoinCash" class="new_cccy" id="bchimg">
                            <input id="bch-check" type="checkbox" name="product[acc_bch]"  class="curr_checkbox" value="true" checked>
                        </label>
                    <% } else { %>
                        <label class="img-check ">
                            <img src="../../dist/img/bitcoincash.png" id="bch-check-img"  alt="BitcoinCash" class="new_cccy gray" id="bchimg">
                            <input id="bch-check" type="checkbox" name="product[acc_bch]" value="true"  class="curr_checkbox">
                        </label>
                    <% } %>
                </label>
                <label class="checkbox">
                    <% if (product.accepted[2]){ %>
                        <label class="img-check ">
                            <img src="../../dist/img/ethereum.png" id="eth-check-img"  alt="ethereum" class="new_cccy" id="ethimg">
                            <input id="eth-check" type="checkbox" name="product[acc_eth]"  value="true" class="curr_checkbox"  checked>
                        </label>
                    <% } else { %>
                        <label class="img-check ">
                            <img src="../../dist/img/ethereum.png" id="eth-check-img"  alt="ethereum" class="new_cccy gray" id="ethimg">
                            <input id="eth-check" type="checkbox" name="product[acc_eth]" value="true"  class="curr_checkbox" >
                        </label>
                    <% } %>
                </label>
                <label class="checkbox">
                    <% if (product.accepted[3]){ %>
                        <label class="img-check ">
                            <img src="../../dist/img/litecoin.png" id="ltc-check-img"  alt="Litecoin" class="new_cccy" id="ltcimg">
                            <input id="ltc-check" type="checkbox" name="product[acc_ltc]"  value="true" class="curr_checkbox"  checked>
                        </label>
                    <% } else { %>
                        <label class="img-check ">
                            <img src="../../dist/img/litecoin.png" id="ltc-check-img"  alt="Litecoin" class="new_cccy gray" id="ltcimg">
                            <input id="ltc-check" type="checkbox" name="product[acc_ltc]" value="true"  class="curr_checkbox" >
                        </label>
                    <% } %>
                </label>
                <label class="checkbox">
                    <% if (product.accepted[4]){ %>
                        <label class="img-check ">
                            <img src="../../dist/img/dash.png" id="dash-check-img"  alt="DASH" class="new_cccy" id="dashimg">
                            <input id="dash-check" type="checkbox" name="product[acc_dash]"  value="true" class="curr_checkbox" checked>
                        </label>
                    <% } else { %>
                        <label class="img-check ">
                            <img src="../../dist/img/dash.png" id="dash-check-img"  alt="DASH" class="new_cccy gray" id="dashimg">
                            <input id="dash-check" type="checkbox" name="product[acc_dash]"  value="true" class="curr_checkbox" >
                        </label>
                    <% } %>
                </label>

                <% if (product.accepted[0]) { %>
                    <input class="input smmargin" id="btc-price" name="product[btc_price]" placeholder="<%= product.price[0] %> BTC" type="number" value="<%= product.price[0] %>" step=any />
                <% } else { %>
                    <input class="currency-input input smmargin" id="btc-price" name="product[btc_price]" placeholder="Price (BTC)" type="number" step=any />
                <% } %>

                <% if (product.accepted[1]) { %>
                    <input class="input smmargin" id="bch-price"  name="product[bch_price]" placeholder="<%= product.price[1] %> BCH" type="number" value="<%= product.price[1] %>" step=any />
                <% } else { %>
                    <input class="currency-input input smmargin" id="bch-price"  name="product[bch_price]" placeholder="Price (BCH)" type="number" step=any />
                <% } %>

                <% if (product.accepted[2]) { %>
                    <input class="input smmargin" id="eth-price"  name="product[eth_price]" placeholder="<%= product.price[2] %> ETH" type="number" value="<%= product.price[2] %>" step=any />
                <% } else { %>
                    <input class="currency-input input smmargin" id="eth-price"  name="product[eth_price]" placeholder="Price (ETH)" type="number" step=any />
                <% } %>

                <% if (product.accepted[3]) { %>
                    <input class="input smmargin" id="ltc-price"  name="product[ltc_price]" placeholder="<%= product.price[3] %> LTC" type="number" value="<%= product.price[3] %>" step=any />
                <% } else { %>
                    <input class="currency-input input smmargin" id="ltc-price"  name="product[ltc_price]" placeholder="Price (LTC)" type="number" step=any />
                <% } %>

                <% if (product.accepted[4]) { %>
                    <input class="input smmargin" id="dash-price"  name="product[dash_price]" placeholder="<%= product.price[4] %> DASH" type="number" value="<%= product.price[4] %>" step=any />
                <% } else { %>
                    <input class="currency-input input smmargin" id="dash-price"  name="product[dash_price]" placeholder="Price (DASH)" type="number" step=any />
                <% } %>

                <hr />
                <div class="control smmargin">
                    <button class="button is-primary">Update</button>
                </div>
            </form>
            <hr>
            <h4 class="new-text">Feature your deal</h4>
            <h5 class="token-text">You have <%= user.feature_tokens %> tokens</h5>
            <table class="table is-hoverable is-bordered new-table">
                <thead>
                    <tr>
                        <th>Type</th>
                        <th>Description</th>
                        <th>Duration</th>
                        <th>Cost</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Subcategory feature</td>
                        <td>The deal will be shown in the first 5 deals on a subcategory page.</td>
                        <td>14 days</td>
                        <td>5 Tokens</td>
                        <td style="padding-top: 0;">
                            <form action="/dashboard/<%= product._id %>/edit/1?_method=PUT" method="POST" style="padding: inherit;">
                                <div class="control smmargin">
                                    <button class="button is-primary">Feature</button>
                                </div>
                            </form>
                        </td>
                    </tr>
                    <tr>
                        <td>Front-page feature</td>
                        <td>The deal will be shown on the front-page of the website.</td>
                        <td>7 days</td>
                        <td>15 Tokens</td>
                        <td style="padding-top: 0;">
                            <form action="/dashboard/<%= product._id %>/edit/2?_method=PUT" method="POST" style="padding: inherit;">
                                <div class="control smmargin">
                                    <button class="button is-primary">Feature</button>
                                </div>
                            </form>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="column"></div>
    </div>
</div>
<script src="../../dist/js/dashboard_edit.js"></script>
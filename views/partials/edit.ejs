                            <option <% if ( product.category == "gpssecurity") { %> selected <% } else { %> <% } %>  value="gpssecurity">GPS & Security Devices</option>
                            <option <% if ( product.category == "radarlaser") { %> selected <% } else { %> <% } %>  value="radarlaser">Radar & Laser Detectors</option>
                            <option <% if ( product.category == "caredetailing") { %> selected <% } else { %> <% } %>  value="caredetailing">Care & Detailing</option>
                            <option <% if ( product.category == "scooter") { %> selected <% } else { %> <% } %>  value="scooter">Scooter Parts & Accessories</option>
                            <option disabled>Toys & Hobbies</option>

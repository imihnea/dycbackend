                                    <i class="fas fa-upload"></i>
                                </span>
                                <span class="file-label">
                                    Choose a fileâ€¦
                                </span>
                            </span>
                            <span class="file-name">
                                .jpeg .jpg .png
                            </span>
                    </label>
                </div>
            </div>
            
            <textarea name="description" class="textarea" value="<%= product.description %>"><%= product.description %></textarea>
            <!-- <input class="input smmargin" name="price" value="<%= product.price %>" type="number" placeholder="<%= product.price %>$" required /> -->
            <h4 style="margin-top: 1vh;">Accepted currencies</h4>
            <% 
                let currencies = [0, 0, 0, 0, 0];
                product.accepted.forEach(( key ) => {
                    if (key == 'BTC'){
                        currencies[0] = 1;
                    }
                    if (key == 'BCH'){
                        currencies[1] = 1;
                    }
                    if (key == 'ETH'){
                        currencies[2] = 1;
                    }
                    if (key == 'LTC'){
                        currencies[3] = 1;
                    }
                    if (key == 'DASH'){
                        currencies[4] = 1;
                    }
                });
            %>
            <label class="checkbox">
                <% if (currencies[0] == 1){ %>
                    <label class="img-check ">
                        <img src="../../dist/img/bitcoin.png" id="btc-check-img" alt="Bitcoin" class="new_cccy" id="btcimg">
                        <input id="btc-check" type="checkbox" name="accepted" class="curr_checkbox" value="BTC" checked>
                    </label>
                <% } else { %>
                    <label class="img-check ">
                        <img src="../../dist/img/bitcoin.png" id="btc-check-img" alt="Bitcoin" class="new_cccy gray" id="btcimg">
                        <input id="btc-check" type="checkbox" name="accepted" class="curr_checkbox" value="BTC">
                    </label>
                <% } %>
            </label>
            <label class="checkbox">
                <% if (currencies[1] == 1){ %>
                    <label class="img-check ">
                        <img src="../../dist/img/bitcoincash.png" id="bch-check-img"  alt="BitcoinCash" class="new_cccy" id="bchimg">
                        <input id="bch-check" type="checkbox" name="accepted"  class="curr_checkbox" value="BCH" checked>
                    </label>
                <% } else { %>
                    <label class="img-check ">
                        <img src="../../dist/img/bitcoincash.png" id="bch-check-img"  alt="BitcoinCash" class="new_cccy gray" id="bchimg">
                        <input id="bch-check" type="checkbox" name="accepted"  class="curr_checkbox" value="BCH">
                    </label>
                <% } %>
            </label>
            <label class="checkbox">
                <% if (currencies[2] == 1){ %>
                    <label class="img-check ">
                        <img src="../../dist/img/ethereum.png" id="eth-check-img"  alt="ethereum" class="new_cccy" id="ethimg">
                        <input id="eth-check" type="checkbox" name="accepted"  class="curr_checkbox" value="ETH" checked>
                    </label>
                <% } else { %>
                    <label class="img-check ">
                        <img src="../../dist/img/ethereum.png" id="eth-check-img"  alt="ethereum" class="new_cccy gray" id="ethimg">
                        <input id="eth-check" type="checkbox" name="accepted"  class="curr_checkbox" value="ETH">
                    </label>
                <% } %>
            </label>
            <label class="checkbox">
                <% if (currencies[3] == 1){ %>
                    <label class="img-check ">
                        <img src="../../dist/img/litecoin.png" id="ltc-check-img"  alt="Litecoin" class="new_cccy" id="ltcimg">
                        <input id="ltc-check" type="checkbox" name="accepted"  class="curr_checkbox" value="LTC" checked>
                    </label>
                <% } else { %>
                    <label class="img-check ">
                        <img src="../../dist/img/litecoin.png" id="ltc-check-img"  alt="Litecoin" class="new_cccy gray" id="ltcimg">
                        <input id="ltc-check" type="checkbox" name="accepted"  class="curr_checkbox" value="LTC">
                    </label>
                <% } %>
            </label>
            <label class="checkbox">
                <% if (currencies[4] == 1){ %>
                    <label class="img-check ">
                        <img src="../../dist/img/dash.png" id="dash-check-img"  alt="DASH" class="new_cccy" id="dashimg">
                        <input id="dash-check" type="checkbox" name="accepted"  class="curr_checkbox" value="DASH" checked>
                    </label>
                <% } else { %>
                    <label class="img-check ">
                        <img src="../../dist/img/dash.png" id="dash-check-img"  alt="DASH" class="new_cccy gray" id="dashimg">
                        <input id="dash-check" type="checkbox" name="accepted"  class="curr_checkbox" value="DASH">
                    </label>
                <% } %>
            </label>

            <% if (currencies[0] == 1) { %>
                <input class="input smmargin" id="btc-price" name="btc_price" placeholder="<%= product.price[0] %> BTC" type="number" step=any />
            <% } else { %>
                <input class="currency-input input smmargin" id="btc-price" name="btc_price" placeholder="Price (BTC)" type="number" step=any />
            <% } %>

            <% if (currencies[1] == 1) { %>
                <input class="input smmargin" id="bch-price"  name="bch_price" placeholder="<%= product.price[1] %> BCH" type="number" step=any />
            <% } else { %>
                <input class="currency-input input smmargin" id="bch-price"  name="bch_price" placeholder="Price (BCH)" type="number" step=any />
            <% } %>

            <% if (currencies[2] == 1) { %>
                <input class="input smmargin" id="eth-price"  name="eth_price" placeholder="<%= product.price[2] %> ETH" type="number" step=any />
            <% } else { %>
                <input class="currency-input input smmargin" id="eth-price"  name="eth_price" placeholder="Price (ETH)" type="number" step=any />
            <% } %>

            <% if (currencies[3] == 1) { %>
                <input class="input smmargin" id="ltc-price"  name="ltc_price" placeholder="<%= product.price[3] %> LTC" type="number" step=any />
            <% } else { %>
                <input class="currency-input input smmargin" id="ltc-price"  name="ltc_price" placeholder="Price (LTC)" type="number" step=any />
            <% } %>

            <% if (currencies[4] == 1) { %>
                <input class="input smmargin" id="dash-price"  name="dash_price" placeholder="<%= product.price[4] %> DASH" type="number" step=any />
            <% } else { %>
                <input class="currency-input input smmargin" id="dash-price"  name="dash_price" placeholder="Price (DASH)" type="number" step=any />
            <% } %>

            <hr />
            <div class="control smmargin">
                <button class="button is-primary">Update</button>
            </div>
            
            

        </form>
        <hr />

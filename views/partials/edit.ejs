<div class="column" >
        <h1>Edit <%= product.name %></h1>
        <form action="/dashboard/<%= product._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
            <input class="input smmargin" name="name" value="<%= product.name %>" type="text" required />
            
            <div class="filencat">
                <div class="select">
                    <select name="category">
                        <option disabled selected value="All">All Categories</option>
                        <option value="category1">Category 1</option>
                        <option value="category2">Category 2</option>
                    </select>
                </div>
    
                <div class="file has-name">
                    <label class="file-label">
                        <input class="file-input" type="file" name="image" accept="image/*">
                            <span class="file-cta">
                                <span class="file-icon">
                                    <i class="fas fa-upload"></i>
                                </span>
                                <span class="file-label">
                                    Choose a fileâ€¦
                                </span>
                            </span>
                            <span class="file-name">
                                .jpeg .jpg .png
                            </span>
                    </label>
                </div>
            </div>
            
            <textarea name="description" class="textarea" value="<%= product.description %>"></textarea>
            <input class="input smmargin" name="price" value="<%= product.price %>$" type="number" required />
            <h4 style="margin-top: 1vh;">Accepted currencies</h4>
            <% 
                let currencies = [0, 0, 0, 0, 0];
                product.accepted.forEach(( key ) => {
                    if (key == 'BTC'){
                        currencies[0] = 1;
                    }
                    if (key == 'BCH'){
                        currencies[1] = 1;
                    }
                    if (key == 'ETH'){
                        currencies[2] = 1;
                    }
                    if (key == 'LTC'){
                        currencies[3] = 1;
                    }
                    if (key == 'DASH'){
                        currencies[4] = 1;
                    }
                });
            %>
            <label class="checkbox">
                <% if (currencies[0] == 1){ %>
                    <input name="accepted" type="checkbox" value="BTC" checked>
                        BTC
                <% } else { %>
                    <input name="accepted" type="checkbox" value="BTC">
                        BTC
                <% } %>
            </label>
            <label class="checkbox">
                <% if (currencies[1] == 1){ %>
                    <input name="accepted" type="checkbox" value="BCH" checked>
                        BCH
                <% } else { %>
                    <input name="accepted" type="checkbox" value="BCH">
                        BCH
                <% } %>
            </label>
            <label class="checkbox">
                <% if (currencies[2] == 1){ %>
                    <input name="accepted" type="checkbox" value="ETH" checked>
                        ETH
                <% } else { %>
                    <input name="accepted" type="checkbox" value="ETH">
                        ETH
                <% } %>
            </label>
            <label class="checkbox">
                <% if (currencies[3] == 1){ %>
                    <input name="accepted" type="checkbox" value="LTC" checked>
                        LTC
                <% } else { %>
                    <input name="accepted" type="checkbox" value="LTC">
                        LTC
                <% } %>
            </label>
            <label class="checkbox">
                <% if (currencies[4] == 1){ %>
                    <input name="accepted" type="checkbox" value="DASH" checked>
                        DASH
                <% } else { %>
                    <input name="accepted" type="checkbox" value="DASH">
                        DASH
                <% } %>
            </label>
            <hr />
            <h4 style="margin-top: 1vh;">Feature your deal</h4>
            <h5>You have <%= user.feature_tokens %> DYC-Coins</h5>
            <table class="table is-hoverable is-bordered">
                <thead>
                    <tr>
                        <th>Type</th>
                        <th>Description</th>
                        <th>Duration</th>
                        <th>Cost</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Subcategory feature</td>
                        <td>The deal will be shown in the first 5 deals on a subcategory page.</td>
                        <td>14 days</td>
                        <td>5 DYC-Coins</td>
                        <td>
                            <input name="feat_1" type="checkbox" value="5">
                        </td>
                    </tr>
                    <tr>
                        <td>Front-page feature</td>
                        <td>The deal will be shown on the front-page of the website.</td>
                        <td>7 days</td>
                        <td>15 DYC-Coins</td>
                        <td>
                            <input name="feat_2" type="checkbox" value="15">
                        </td>
                    </tr>
                    <tr>
                        <td>Slider feature</td>
                        <td>The deal will be shown on the front-page slider.</td>
                        <td>3 days</td>
                        <td>20 DYC-Coins</td>
                        <td>
                            <input name="feat_3" type="checkbox" value="20">
                        </td>
                    </tr>
                </tbody>
            </table>
            <div class="control smmargin">
                <button class="button is-primary">Update</button>
            </div>
            
            

        </form>
            
            
    </div>
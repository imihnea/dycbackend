<% include partials/header %>
<div class="hero-body">
        <% include partials/savvy %>
    <div class="container content">
        <h1>Here you can Top-up Litecoin! Press button!</h1>
        <button class="button is-primary" id="savvy-litecoin">Top-up <%= coinsValue %> LTC</button>
    </div>
</div>
<script>
        (function () {
            window.savvy = new Savvy({
                button: '#savvy-litecoin',
                fiatValue: "<%= coinsValue %>"*"<%= ltcrate %>",
                statusUrl: "/savvy/status/<%= orderId %>",
                redirectTo: "/dashboard/addresses",
                currencies: [
                        {
                        "title":"Litecoin",
                        "code":"LTC",
                        "icon":"/dist/img/litecoin.png",
                        "blockExplorer":"https://live.blockcypher.com/ltc/address/%s/",
                        "walletLink":"litecoin:%s?amount=%s",
                        "maxConfirmations":2,
                        "address":"<%= address %>",
                        "coinsValue":"<%= coinsValue %>",
                        "rate":"<%= ltcrate %>"
                        }
                    ]
            });
        })();
    </script>
<% include partials/footer %>
<% include ../partials/header %>
<div class="hero-body">
        <% include ../partials/savvy %>
    <div class="container content">
        <h1>Here you can Top-up Ethereum! Press button!</h1>
        <button class="button is-primary" id="savvy-ethereum">Top-up <%= coinsValue %> ETH</button>
    </div>
</div>
<script>
        (function () {
            window.savvy = new Savvy({
                button: '#savvy-ethereum',
                fiatValue: "<%= coinsValue %>"*"<%= ethrate %>",
                statusUrl: "/savvy/status/<%= orderId %>",
                statusInterval: "30",
                redirectTo: "/dashboard/addresses",
                currencies: [
                        {
                        "title":"Ethereum",
                        "code":"ETH",
                        "icon":"/dist/img/ethereum.png",
                        "blockExplorer":'https://etherscan.io/search?q=%s',
                        "walletLink":"ethereum:%s?amount=%s",
                        "maxConfirmations":"<%= maxConfirmationsETH %>",
                        "address":"<%= address %>",
                        "coinsValue":"<%= coinsValue %>",
                        "rate":"<%= ethrate %>"
                        }
                    ]
            });
        })();
    </script>
<% include ../partials/footer %>
<% include ../partials/header %>
<a href="/">
<button class="btn">Back</button>
</a>
<div class="row" style="margin:auto;">    
        <form action="/categories/products" method="POST">
            <div class="form-group">
                <label for="name">Name</label>
                <input class="form-control" type="text" name="name" id="name" placeholder="product">
            </div>
            <div class="form-group">
                <label for="image">Image</label>
                <input class="form-control" type="text" name="image" id="image" placeholder="https://imgur.com/..." required>
            </div>
            <div class="form-group">
                <label for="category">Category</label>
                <select class="form-control" type="text" name="category" id="category" placeholder="Breakfast" required>
                    <option>Car</option>
                    <option>Clothes</option>
                    <option>Electronics</option>
                    <option>Diapers</option>
                    <option>Junk</option>
                </select>
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <input class="form-control" type="text" name="description" id="description" placeholder="great item!!">
            </div>
            <div class="form-group">
                <label for="cost">Cost in USD</label>
                <input class="form-control" type="number" name="cost" id="cost" placeholder="100$" step="0.01" min="0" required>
            </div>
            <div class="form-row">
                <div class="form-input">
                    <label>Accepted Cryptocurrencies</label>
                    <input type="checkbox" id="btc" name="accepted" value="BTC" unchecked />
                    <label for="btc">BTC</label>
                    <input type="checkbox" id="bch" name="accepted" value="BCH" unchecked />
                    <label for="bch">BCH</label>
                    <input type="checkbox" id="eth" name="accepted" value="ETH" unchecked />
                    <label for="eth">ETH</label>
                    <input type="checkbox" id="dash" name="accepted" value="DASH" unchecked />
                    <label for="dash">DASH</label>
                    <input type="checkbox" id="ltc" name="accepted" value="LTC" unchecked />
                    <label for="ltc">LTC</label>
                </div>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/categories/products">Go Back</a>
    </div>
</div>

<% include ../partials/footer %>
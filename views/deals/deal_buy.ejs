            <h2 class="subtitle">Face to Face Details</h2>
            <form action="/products/<%= product.id %>/buy?_method=PUT" method="POST" class="dealForm">
                <div class="field">
                    <p class="control has-icons-left">
                        <% if(user.number) { %>
                            <input class="input" name="deliveryPhone" type="tel" value="<%= user.number %>" required/>
                        <% } else { %>
                            <input class="input" name="deliveryPhone" id="telephone" type="tel" placeholder="Contact Phone Number" required/>
